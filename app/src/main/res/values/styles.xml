<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!--action bar 高度-->
        <item name="android:actionBarSize">@dimen/action_bar_height</item>
        <item name="actionBarSize">@dimen/action_bar_height</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--toolbar text样式-->
    <style name="toolbar_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--收银子模块字体样式-->
    <style name="fragment_cashier_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <!--收银子模块组件样式-->
    <style name="fragment_cashier_weight_style">
        <item name="android:background">@android:color/white</item>
    </style>

    <!--调货子模块字体样式-->
    <style name="fragment_transfer_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <!--调货子模块组件样式-->
    <style name="fragment_transfer_weight_style">
        <item name="android:background">@android:color/white</item>
    </style>

    <!--收货子模块字体样式-->
    <style name="fragment_receive_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <!--收货子模块组件样式-->
    <style name="fragment_receive_weight_style">
        <item name="android:background">@android:color/white</item>
    </style>

    <!--对话框样式-->
    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/darker_gray</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--date time picker-->
    <style name="date_picker_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/date_picker_bg</item>
    </style>
</resources>
